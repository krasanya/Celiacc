<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubCategories.SubCatListItemResult">

     <Button
         android:id="@+id/btBackToSubCat"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/buttons"
         android:fontFamily="@font/varela_round"
         android:text="חזרה לתתי הקטגורייות"
         android:textColor="#273746"
         android:textSize="18sp" />

     <android.support.v7.widget.RecyclerView
         android:id="@+id/rvListOfProductsSubCatResult"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_margin="16dp"
         tools:listitem="@layout/list_sub_cat_result" />

</LinearLayout>

