<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Cat_Grid">

    <Button
        android:id="@+id/btBackToMain"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:fontFamily="@font/varela_round"
        android:text="חזרה לתפריט ראשי"
        android:textColor="#273746"
        android:textSize="18sp"

        />

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        cardview:cardCornerRadius="2dp"
        cardview:contentPadding="10dp">


        <android.support.constraint.ConstraintLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_anchorGravity="top|left">

            <TextView
                android:id="@+id/iv_cat_image"
                android:layout_width="355dp"
                android:layout_height="33dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="#F012BE"
                android:fontFamily="@font/varela_round"
                android:gravity="right"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="תמונה" />

            <TextView
                android:id="@+id/tvCat"
                android:layout_width="259dp"
                android:layout_height="36dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:background="#7FDBFF"
                android:fontFamily="@font/varela_round"
                android:gravity="left"
                android:text="קטגוריה"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="9dp" />


        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>


