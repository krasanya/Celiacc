<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wheat2"
    android:theme="@style/AppTheme.NoActionBar"
    tools:context="il.non.celiacc.MainActivity"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/_White"
        >
        <ImageView
            android:id="@+id/logo"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/logo" />
        <TextView
            android:id="@+id/toolbar_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20sp"
            android:text="אפליקציית עמותת הצליאק בישראל"
            android:textAlignment="center"
            android:textColor="@color/_black" />

    </android.support.v7.widget.Toolbar>

    <EditText
        android:id="@+id/etEmailReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_texts"
        android:ems="10"
        android:fontFamily="@font/varela_round"
        android:hint="דואר אלקטרוני"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#273746"
        android:textColorHighlight="#273746"
        android:textSize="22sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/etPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_texts"
        android:contentDescription="password"
        android:ems="10"
        android:fontFamily="@font/varela_round"
        android:hint="סיסמא"
        android:inputType="textPassword"
        android:layoutDirection="rtl"
        android:textAlignment="center"
        android:textColor="#273746"
        android:textColorHighlight="#273746"
        android:textSize="22sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/btUpdateUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.343" />

    <Button
        android:id="@+id/btLogin"
        android:layout_width="140dp"
        android:layout_height="65dp"
        android:background="@drawable/buttons"
        android:fontFamily="@font/varela_round"
        android:text="כניסה"
        android:textColor="#273746"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btUpdateUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPassword" />

    <Button
        android:id="@+id/btUpdateUser"
        android:layout_width="140dp"
        android:layout_height="65dp"
        android:background="@drawable/buttons"
        android:fontFamily="@font/varela_round"
        android:text="משתמש חדש"
        android:textColor="#273746"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btLogin" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="292dp"
        android:layout_height="65dp"
        android:layout_marginTop="80dp"
        android:background="#00000000"
        android:fontFamily="@font/varela_round"
        android:layoutDirection="rtl"
        android:text=" ברוכים הבאים למדריך המזון של עמותת הצליאק בישראל! חברי עמותה יכולים להתחבר עם פרטי החבר"
        android:textAlignment="center"
        android:textColor="@color/_White"
        android:textColorHighlight="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ForgotPass"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:text="שכחת את הסיסמא?"
        android:textColor="@color/_White"
        android:background="#00000000"
        app:layout_constraintBottom_toTopOf="@+id/btLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPassword"
        app:layout_constraintVertical_bias="0.235" />

