<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="il.non.celiacc.MainActivity">

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_texts"
        android:fontFamily="@font/varela_round"
        android:textSize="22sp"
        android:textAlignment="center"
        android:ems="10"
        android:hint="שם משתמש"
        android:inputType="textPersonName"
        android:textColor="#273746"
        android:textColorHighlight="#273746"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/etPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_texts"
        android:contentDescription="password"
        android:ems="10"
        android:fontFamily="@font/varela_round"
        android:hint="סיסמא"
        android:inputType="textPassword"
        android:layoutDirection="rtl"
        android:textAlignment="center"
        android:textColor="#273746"
        android:textColorHighlight="#273746"
        android:textSize="22sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/btLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etUsername" />

    <Button
        android:id="@+id/btLogin"
        android:layout_width="140dp"
        android:layout_height="65dp"
        android:background="@drawable/buttons"
        android:fontFamily="@font/varela_round"
        android:text="כניסה"
        android:textColor="#273746"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btRegister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPassword" />

    <Button
        android:id="@+id/btRegister"
        android:layout_width="140dp"
        android:layout_height="65dp"
        android:background="@drawable/buttons"
        android:fontFamily="@font/varela_round"
        android:text="משתמש חדש"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btLogin" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="254dp"
        android:layout_height="64dp"
        android:fontFamily="@font/varela_round"
        android:layoutDirection="rtl"
        android:text=" ברוכה הבאה למדריך המזון של עמותת הצליאק בישראל! חברי עמותה יכולים להתחבר עם פרטי החבר"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

